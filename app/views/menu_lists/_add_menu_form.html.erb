<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">メニューの追加</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% menu_check(@menu_list) %>
      <%= form_with(model: @menu_list) do |form| %>
      <% if @menu_list.errors.any? %>
        <div id="error_explanation">
          <h2><%= @menu_list.errors.count %>件のエラーがあります。</h2>
          <ul>
            <% @menu_list.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="container">
          <div class="modal-body">
            <div class="form-group row">
              <%= form.label :メニュー名, class:"col-4" %>
              <%= form.text_field :menu_name, class:"col-8" %>
            </div>
            <div class="form-group row">
              <%= form.label :Image, class:"col-4" %>
              <%= form.file_field :image, class:"col-8" %>
            </div>
            <div class="form-group row">
              <%= form.label :投稿者, class:"col-4" %>
              <%= form.collection_select :family_id, @families, :family_name, :family_name, include_blank: "選択して下さい", class:"col-8" %>
            </div>
          </div>
      </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= form.submit "登録", class:"btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
