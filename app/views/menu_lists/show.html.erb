
<table class="container">
  <thead class="row mt-5">
    <tr class="offset-1 col-10 row table_head">
      <th class="col-4">メニュー名</th>
      <th class="col-4">image</th>
      <th class="col-4">投稿者</th>
    </tr>
  </thead>
  <% @menu_lists.each_with_index do |menu_list,ids| %>
      <tfoot class="card row mt-4">
        <tr class="card-body offset-1 col-10 row">
            <td class="col-4"><%= menu_list.menu_name %></td>
            <td class="col-4">

                <%= image_tag menu_list.image.url, class:"img-fluid" ,alt:"Responsive image" %>
          </td>
            <td class="col-4"><%= @families.find(menu_list.family_id).family_name %></td>
        </tr>
      </tfoot>
  <% end %>
</table>
<!-- add_menuのフォーム -->
<%= render "add_menu_form" , menu_lists: @menu_list %>

<!-- add_family_nameのフォーム -->
<%= render "add_family_form" , family: @family %>
