

<!-- 試してみた -->
<% @menu_lists.each_with_index do |menu_list,ids| %>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-<%= menu_list.id %>">
  <%= menu_list.menu_name %>
</button>

<div class="modal fade" id="modal-<%= menu_list.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= menu_list.menu_name %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
<% end %>


<!-- show画面 -->
<table class="container show_table">
  <thead class="row mt-5">
    <tr class="offset-1 col-10 row table_head">
      <th class="col-4">メニュー名</th>
      <th class="col-4">image</th>
      <th class="col-3">投稿者</th>
      <th class="col-1 a"></th>
    </tr>
  </thead>
  <% @menu_lists.each_with_index do |menu_list,ids| %>
      <tfoot class="card row mt-4 t_foot">
        <tr class="card-body offset-1 col-10 row">
            <td class="col-md-4 d-flex align-items-center justify-content-center table_data">
              <div class="menu_name">
                <%= menu_list.menu_name %>
              </div>
            </td>
            <td class="col-md-4 d-flex align-items-center justify-content-center"><%= image_tag menu_list.image.url, class:"img-fluid" ,alt:"Responsive image" %></td>
            <td class="col-md-3 d-flex align-items-center justify-content-center"><%= @families.find(menu_list.family_id).family_name %></td>
            <td class="a col-1"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-<%= menu_list.id %>">・・・</button></td>
        </tr>
      </tfoot>
  <% end %>
</table>

<!-- ページネーション -->
<div class="paginate mt-4">
  <%= paginate @menu_lists, theme: 'twitter-bootstrap-4' %>
</div>

<!-- add_menuのフォーム -->
<%= render "add_menu_form" , menu_lists: @menu_list %>

<!-- add_family_nameのフォーム -->
<%= render "add_family_form" , family: @family %>
